# Server Configuration
PORT=3000
NODE_ENV=development
APP_STAGE=dev

# CORS Configuration
# In development, localhost on any port is allowed
# In production, set this to your frontend domain
CORS_ORIGIN=http://localhost:5173

# Logging
# Options: debug, info, warn, error
LOG_LEVEL=info

# Data Directory
# Path to directory containing formSchema.json and submissions.json
DATA_DIR=./data

